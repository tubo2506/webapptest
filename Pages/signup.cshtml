@page
@model WebApplication.Pages.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}
<div class="signin_container_all">
    <div class="signin_container">
        <!-- Create a sign up form with name, email, password, address and button -->
        <form action="signup" method="post">
            <label asp-for = "Name"  for="name">Name:</label>
            <input asp-for = "Name" type="text" id="name" name="name" required>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" required>
            <button type="submit">Sign Up</button>
            <p>Already have an account? <a href="/signin">Sign In</a></p>
        </form>
    </div>
</div>
